<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditFile">

    <ImageView
        android:id="@+id/bguser"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/gradient_blue"
        app:layout_constraintBottom_toBottomOf="@+id/textView36"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/logo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/prLogo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/logo" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/nameProject"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:autoSizeMaxTextSize="28sp"
        android:autoSizeMinTextSize="19sp"
        android:autoSizeTextType="uniform"
        android:gravity="center|left"
        android:text="Название проекта"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="@+id/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/logo"
        app:layout_constraintTop_toTopOf="@+id/logo" />

    <TextView
        android:id="@+id/textView36"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:text="Файлы проекта"
        android:textSize="25sp"
        android:textStyle="italic|bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="15dp"
        android:src="?files_icon"
        app:layout_constraintBottom_toBottomOf="@+id/textView36"
        app:layout_constraintStart_toEndOf="@+id/textView36" />

    <TextView
        android:id="@+id/textView37"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="∞ количество ссылок на файлы"
        android:textSize="13sp"
        android:textColor="@color/s_gray"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView36" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView37">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imagePurp"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/logo_second_type"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearance="@style/CornerCut" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/progress_panel_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/imagePurp"
            app:layout_constraintStart_toStartOf="@+id/imagePurp"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/fileName1"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/transparent"
            android:hint="Новый файла"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="11sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toStartOf="@+id/changePhoto1"
            app:layout_constraintStart_toStartOf="@+id/imagePurp"
            app:layout_constraintTop_toTopOf="@+id/imagePurp" />

        <EditText
            android:id="@+id/fileLink1"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/transparent"
            android:hint="Ссылка на файл"
            android:paddingTop="-5dp"
            android:paddingBottom="-5dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="9sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toStartOf="@+id/changePhoto1"
            app:layout_constraintStart_toStartOf="@+id/imagePurp"
            app:layout_constraintTop_toBottomOf="@+id/fileName1" />

        <ImageView
            android:id="@+id/saveChanges1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="15dp"
            android:src="@drawable/notban"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/imagePurp"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/changePhoto1"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/violete"
            android:paddingStart="-1dp"
            android:paddingTop="-1dp"
            android:paddingEnd="-1dp"
            android:paddingBottom="-1dp"
            android:text="Изменить фото"
            android:textColor="@color/white"
            android:textSize="9sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/saveChanges1"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="?logo_type"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />


</androidx.constraintlayout.widget.ConstraintLayout>