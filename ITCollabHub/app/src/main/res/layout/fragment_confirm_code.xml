<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".confirm_code">


    <TextView
        android:id="@+id/collaborotory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ITCollabHub"
        android:textSize="50sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Подтверждение почты"
        android:textSize="29sp"
        android:layout_marginTop="38dp"
        android:layout_marginStart="21dp"
        app:layout_constraintTop_toBottomOf="@id/collaborotory"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/main_text"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginTop="9dp"
        android:text="Мы отправили вам на почту код для её подтверждения. Введите его в поле ниже для продолжения."
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/confirm"
        tools:ignore="TextSizeCheck" />

    <EditText
        android:id="@+id/code"
        android:layout_width="371dp"
        android:layout_height="60dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/rounded"
        android:hint="Код подтверждения"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:inputType="number"
        android:paddingStart="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_text"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="16dp"
        android:text="Или"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/confirmBut"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="TextSizeCheck" />

    <Button
        android:id="@+id/enterBut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="-23dp"
        android:background="?android:attr/selectableItemBackground"
        android:text="Войти"
        android:textColor="#1f57db"
        app:layout_constraintBottom_toTopOf="@id/confirmBut"
        app:layout_constraintLeft_toRightOf="@+id/enter" />

    <Button
        android:id="@+id/confirmBut"
        android:layout_width="285dp"
        android:layout_height="70dp"
        android:layout_marginTop="315dp"
        android:text="Подтвердить"
        android:backgroundTint="#00C6A2"
        app:layout_constraintTop_toBottomOf="@+id/code"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/ver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="1.0.0"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/confirmBut"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>